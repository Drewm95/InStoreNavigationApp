<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.andrew.instorenavigation">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginView">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".NavigationView" />
        <activity android:name=".ListView"
            android:windowSoftInputMode="stateHidden"
            />
        <activity android:name=".EditListView"
            android:windowSoftInputMode="stateHidden"
            />
        <activity android:name=".StoreView" />
        <activity android:name=".SettingsView" />
        <activity android:name=".CreateAccountView"/>
        <activity android:name=".MapView"/>
    </application>

</manifest>